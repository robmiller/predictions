<!DOCTYPE html>
<html lang="en">
<head>
	<title>Predictions</title>

	<link href="https://fonts.googleapis.com/css?family=Libre+Baskerville:400,400i,700&amp;subset=latin-ext" rel="stylesheet">

	<style>
		body {
			font-family:'Libre Baskerville', Baskerville, serif;
			font-size: 14px;
		}

		div.predictions {
			position:relative;
			overflow:hidden;
		}

		div.prediction {
			float:left;
			width:50%;
			max-width:500px;
			padding-right:1em;
		}

		table {
			border:1px solid #ccc;
			border-collapse:collapse;
		}

		tr.even {
			background:#f9f9f9;
		}

		td, th {
			border:1px solid #ccc;
			padding:0.5em;
		}

		th.narrow, td.narrow {
			width:1em;
		}
	</style>

</head>
<body>
	<h1>Predictions</h1>

	<h2>Actual table</h2>

	<table>
		<thead>
			<tr>
				<th class="narrow">#.</th>
				<th>Team</th>
				<th class="narrow">Points</th>
			</tr>
		</thead>
		<tbody>
		<% @actual_table.each do |position| %>
			<tr class="<%= position[:position].even? ? "even" : "odd" %>">
				<td align="right"><%= position[:position] %></td>
				<td><%= position[:team] %></td>
				<td align="right"><%= position[:points] %></td>
			</tr>
		<% end %>
		</tbody>
	</table>

	<h2>Predictions</h2>

	<div class="predictions">

	<% @scores.each do |name, data| %>
		<div class="prediction">
			<h3><%= name %></h3>
			<h4><%= data[:score] %> points</h4>

			<table>
				<thead>
					<tr>
						<th class="narrow">#.</th>
						<th>Team</th>
						<th class="narrow">Predicted points</th>
						<th class="narrow">Position diff.</th>
						<th class="narrow">Points diff.</th>
					</tr>
				</thead>
				<tbody>
				<% data[:table].each do |position| %>
					<tr class="<%= position[:position].even? ? "even" : "odd" %>">
						<td align="right"><%= position[:position] %></td>
						<td><%= position[:team] %></td>
						<td align="right"><%= position[:points] %></td>
						<td align="right"><%= position[:difference] %></td>
						<td align="right"><%= position[:points_difference] %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	<% end %>

	</div>
</body>
</html>
